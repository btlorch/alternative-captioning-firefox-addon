{
  "manifest_version": 2,
  "name": "Image caption insertion",
  "description": "Inserts descriptive image captions in image alternative tags to support visually impaired people browse the web with a screen reader",
  "homepage_url": "https://github.com/btlorch/firefox-image-labelling-extension",
  "version": "0.1",
  "icons": {
	"48": "icon_48.png",
	"96": "icon_96.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./substitute.js"]
    }
  ],
  "permissions": [
    "storage",
    "https://westeurope.api.cognitive.microsoft.com/*"
  ],
  "options_ui": {
    "page": "options.html"
  }
}
